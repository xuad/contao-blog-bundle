{
    "name": "xuad/contao-blog-bundle",
    "type": "contao-bundle",
    "description": "Contao-NewsModule as Blog",
    "license": "proprietary",
    "authors": [
        {
            "name": "Patrick Mosch",
            "email": "info@xuad.net"
        }
    ],
    "require": {
        "php": "^7.1",
        "contao/core-bundle": "^4.5.0",
        "symfony/framework-bundle": "^3.4.0",
        "contao/news-bundle": "^4.5.0"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "contao/test-case": "^1.1",
        "friendsofphp/php-cs-fixer": "^2.6",
        "leofeyer/optimize-native-functions-fixer": "^1.0",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message-factory": "^1.0.2",
        "phpunit/phpunit": "^6.1",
        "satooshi/php-coveralls": "^1.0",
        "symfony/phpunit-bridge": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Xuad\\BlogBundle\\": "src/"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "tests/",
            "src/Resources/contao/config",
            "src/Resources/contao/dca",
            "src/Resources/contao/languages",
            "src/Resources/contao/templates"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Xuad\\BlogBundle\\Test\\": "tests/"
        }
    },
    "extra": {
        "contao-manager-plugin": "Xuad\\BlogBundle\\ContaoManager\\Plugin"
    }
}
